<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <%= form_for(vehicle) do |f| %>
      <% if vehicle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

          <ul>
          <% vehicle.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <!--<div class="form-group">
        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control' %>
      </div>-->

      <div class="form-group">
        <%= f.label :car_make %>
        <%= f.text_field :car_make, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :car_model %>
        <%= f.text_field :car_model, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :car_built %>
        <%= f.date_select :car_built, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :car_color %>
        <%= f.text_field :car_color, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :car_rego %>
        <%= f.text_field :car_rego, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.submit nil, :class => 'btn update-vehicle-link' %>
      </div>
    <% end %>

    <hr>

  </div>
</div>
